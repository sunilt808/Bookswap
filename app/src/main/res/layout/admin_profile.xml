<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgtemp"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/imgAdminProfileLogo"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:src="@drawable/logo"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tvAdminProfileHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Admin Profile"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#222222" />
        </LinearLayout>

        <!-- PROFILE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:padding="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgAdminProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/circle_background"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/tvAdminName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/tvAdminEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="admin@example.com"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="6dp" />

                <TextView
                    android:id="@+id/tvAdminRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role: Super Admin"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvTotalUsersAdmin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Users: 0"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/card_bg_rounded" />

                    <TextView
                        android:id="@+id/tvTotalBooksAdmin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Books: 0"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/card_bg_rounded" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnAdminLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="#FF4444"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
